{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/types/express.d.ts","src"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  